pipeline {
    agent any
    stages {
        stage('Install node modules') {
            steps {
                sh 'npm install'
            }
        }
        stage('Build') {
            steps {
                sh 'npm run build-locale'
            }
        }
        /*
        // The test will be created in a second stage...
        stage('Test') {
            steps {
                sh 'ng test'
            }
        } 
        */       
        stage('Deploy') {
            steps {
                sh ''
            }
        }             
    }
}